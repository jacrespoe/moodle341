{{!
  @template theme_shoelace/#carousel

  Moodle carousel tile template.

  The purpose of this template is to render the carousel.
}}
<div id="{{my_carousel}}" class="carousel slide">
    <ol class="carousel-indicators">
    {{#indicators}}
        {{{.}}}
    {{/indicators}}
    </ol>
    <div class="carousel-inner{{centered}}{{below}}">
    {{#slides}}
        {{{.}}}
    {{/slides}}
    </div>
    <a class="left carousel-control" href="#{{my_carousel}}" data-slide="prev"><span aria-hidden="true" class="fa fa-chevron-circle-left"></span></a>
    <a class="right carousel-control" href="#{{my_carousel}}" data-slide="next"><span aria-hidden="true" class="fa fa-chevron-circle-right"></span></a>
</div>