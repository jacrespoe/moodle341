{{!
  @template theme_shoelace/#page_header

  Moodle page header tile template.

  The purpose of this template is to render the page header.
}}
<header id="page-header" class="clearfix">
    {{{context_header}}}
    <div id="page-navbar" class="clearfix">
        {{#rtl}}
        <div class="breadcrumb-button">{{{page_heading_button}}}</div>
        {{/rtl}}
        <nav class="breadcrumb-nav">{{{breadcrumb}}}</nav>
        {{#ltr}}
        <div class="breadcrumb-button">{{{page_heading_button}}}</div>
        {{/ltr}}
    </div>
    <div id="course-header">
        {{{course_header}}}
    </div>
</header>